<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
       
    <bean id="accessCotrolController" name="/acl/*.do" class="com.sds.acube.luxor.common.controller.AccessControlController">
        <property name="accessControllService" ref="accessControllService" />
		<property name="methodNameResolver" ref="accessCotrolControllerResolver" />
        <property name="aclSetupUser" value="/luxor/common/user/acl/aclSetupUser.jsp" />
        <property name="aclView" value="/luxor/common/user/acl/aclView.jsp" />
	</bean>
  
    <bean id="accessCotrolControllerResolver" 
            class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="/acl/aclSetupUser.do">aclSetupUser</prop>
                <prop key="/acl/aclView.do">aclView</prop>
            </props>
        </property>
    </bean>
    
</beans>
