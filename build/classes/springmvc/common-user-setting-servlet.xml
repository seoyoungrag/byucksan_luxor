<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
       
    <bean id="userSettingController" name="/admin/usersetting/*.do" class="com.sds.acube.luxor.common.controller.UserSettingController">
        <property name="clearUserSettingView" value="/luxor/admin/clearUserSetting.jsp" />
		<property name="userSettingService" ref="userSettingService" />
        <property name="methodNameResolver" ref="userSettingControllerResolver" />
	</bean>

    <bean id="userSettingControllerResolver" 
            class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="/admin/usersetting/view.do">clearUserSettingView</prop>
                <prop key="/admin/usersetting/clear.do">deleteUserAllSetting</prop>
                <prop key="/admin/usersetting/clearAll.do">deleteAllSetting</prop>
            </props>
        </property>
    </bean>

</beans>
