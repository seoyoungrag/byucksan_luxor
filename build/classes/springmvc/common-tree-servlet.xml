<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
       
    <bean id="treeController" name="/tree/*.do" class="com.sds.acube.luxor.common.controller.TreeController">
		<property name="treeService" ref="treeService" />
		<property name="methodNameResolver" ref="treeControllerResolver" />
        <property name="treeView" value="/luxor/common/tree/tree.jsp" />
        <property name="treeOrgView" value="/luxor/portal/org/OrgTree.jsp" />
	</bean>
  
    <bean id="treeControllerResolver" 
            class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="/tree/view.do">getTree</prop>
                <prop key="/tree/getNode.do">getTreeNode</prop>
                <prop key="/tree/insert.do">insertTreeNode</prop>
                <prop key="/tree/modify.do">updateTreeNode</prop>
                <prop key="/tree/delete.do">deleteTreeNode</prop>
                <prop key="/tree/OrgTreeView.do">getOrgTree</prop>
            </props>
        </property>
    </bean>
  
</beans>
