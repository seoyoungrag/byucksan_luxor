<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
       
    <bean id="generalPortletController" name="/general/*.do" class="com.sds.acube.luxor.portal.controller.GeneralPortletController">
		<property name="generalPortletService" ref="generalPortletService" />
		<property name="methodNameResolver" ref="generalPortletControllerResolver" />
	</bean>
	
    <bean id="generalPortletControllerResolver" 
            class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="/general/getWeatherInfo.do">getWeatherInfo</prop>
            </props>
        </property>
    </bean>
    
</beans>
