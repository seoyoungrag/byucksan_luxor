<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE queryservice PUBLIC "-//ANYFRAME//DTD QUERYSERVICE//EN"
"http://www.anyframejava.org/dtd/anyframe-core-query-mapping-3.2.dtd">
<queryservice>
	<queries>
        <query id="getCache">
            <statement>
            <![CDATA[
                select * from tlxr_cache where module_id=:vo.moduleId and module_key=:vo.moduleKey
            ]]>
            </statement>
            <result class="com.sds.acube.luxor.framework.vo.CacheVO"/>
        </query>

        <query id="getCacheList">
            <statement>
            <![CDATA[
                select * from tlxr_cache
            ]]>
            </statement>
            <result class="com.sds.acube.luxor.framework.vo.CacheVO"/>
        </query>
        
		<query id="insertCache">
			<statement>
			<![CDATA[
                insert into tlxr_cache (module_id, module_key, updated_time)
                    values (:vo.moduleId, :vo.moduleKey, :vo.updatedTime)
			]]>
			</statement>
		</query>
        
        <query id="updateCache">
            <statement>
            <![CDATA[
                update tlxr_cache set updated_time=:vo.updatedTime 
                 where module_id=:vo.moduleId 
                   and module_key=:vo.moduleKey
            ]]>
            </statement>
        </query>

	</queries>
</queryservice>