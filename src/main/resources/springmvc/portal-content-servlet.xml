<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
       
    
    <bean id="portalContentController" name="/content/*.do" class="com.sds.acube.luxor.portal.controller.PortalContentController">
        <property name="treeService" ref="treeService" />
		<property name="portalContentService" ref="portalContentService" />
        <property name="portletManagementService" ref="portletManagementService" />
        <property name="groupPortalService" ref="groupPortalService" />
        <property name="portalPageLayoutService" ref="portalPageLayoutService" />
        <property name="portalPageService" ref="portalPageService" />
		<property name="methodNameResolver" ref="portalContentControllerResolver" />
        <property name="contentList" value="/luxor/portal/content/contentList.jsp" />
        <property name="contentListSimple" value="/luxor/portal/content/contentListSimple.jsp" />
        <property name="contentSelector" value="/luxor/portal/content/contentSelector.jsp" />
        <property name="contentsSelector" value="/luxor/portal/content/contentsSelector.jsp" />        
        <property name="contentManager" value="/luxor/portal/content/contentManager.jsp" />
	</bean>
  
    <bean id="portalContentControllerResolver" 
            class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="/content/manager.do">getIndexPage</prop>
                <prop key="/content/list.do">getContentList</prop>
                <prop key="/content/listSimple.do">getContentListSimple</prop>
                <prop key="/content/view.do">getContent</prop>
                <prop key="/content/insert.do">insertContent</prop>
                <prop key="/content/update.do">updateContent</prop>
                <prop key="/content/delete.do">deleteContent</prop>
            </props>
        </property>
    </bean>
      
</beans>
