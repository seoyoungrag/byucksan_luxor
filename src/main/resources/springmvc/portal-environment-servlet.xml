<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
       
    
    <bean id="portalEnvironmentController" name="/admin/environment/*.do" class="com.sds.acube.luxor.portal.controller.PortalEnvironmentController">
		<property name="portalEnvironmentService" ref="portalEnvironmentService" />
		<property name="methodNameResolver" ref="portalEnvironmentControllerResolver" />
        <property name="envManager" value="/luxor/portal/environment/envManager.jsp" />
	</bean>
  
    <bean id="portalEnvironmentControllerResolver" 
            class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="/admin/environment/manager.do">getEnvironments</prop>
            </props>
        </property>
    </bean>
      
</beans>
