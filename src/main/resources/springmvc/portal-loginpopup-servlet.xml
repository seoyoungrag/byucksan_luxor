<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
       
    
    <bean id="loginPopupController" name="/loginpopup/*.do" class="com.sds.acube.luxor.portal.controller.LoginPopupController">
        <property name="loginPopupService" ref="loginPopupService" />
        <property name="methodNameResolver" ref="loginPopupControllerResolver" />
        <property name="popupList" value="/luxor/portal/loginpopup/popupList.jsp" />
    </bean>
  
    <bean id="loginPopupControllerResolver" 
            class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="/loginpopup/list.do">getPopupList</prop>
            </props>
        </property>
    </bean>
      
</beans>
