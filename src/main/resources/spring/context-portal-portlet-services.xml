<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="portletManagementService" class="com.sds.acube.luxor.portal.service.impl.PortletManagementServiceImpl">
        <property name="contextDAO">
            <bean class="com.sds.acube.luxor.portal.dao.PortletContextDAO">
                <property name="queryService" ref="queryService" />
            </bean>
        </property>
        <property name="categoryDAO">
            <bean class="com.sds.acube.luxor.portal.dao.PortletCategoryDAO">
                <property name="queryService" ref="queryService" />
            </bean>
        </property>
        <property name="messageService" ref="messageService" />
    </bean>
    
    <bean id="portletContextService" class="com.sds.acube.luxor.portal.service.impl.PortletContextServiceImpl">
        <property name="contextDAO">
            <bean class="com.sds.acube.luxor.portal.dao.PortletContextDAO">
                <property name="queryService" ref="queryService" />
            </bean>
        </property>
    </bean>
    
</beans>
